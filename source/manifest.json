{
	"name": "Make Mobile View",
	"version": "0.0.4",
	"description": "Make any non-mobile website to MOBILE in ONE click",
	"homepage_url": "https://github.com/fregante/browser-extension-template",
	"manifest_version": 3,
	"minimum_chrome_version": "100",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"activeTab"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content.js" ],
			"css": [ "content.css" ],
			"run_at": "document_end"
		}
	]
}
